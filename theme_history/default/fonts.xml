  <fontDef name="trainer-name" filename="res/fonts/NotoSans-SemiCondensedBlack.ttf" color="#434343" size="18" incremental="false" characters="AaBbCcDdEeFfGgHhIiJjKkLlMmNnOoPpQqRrSsTtUuVvWwXxYyZz"/>

  <fontDef name="console-green" ref="main" color="#7CB147"/>
  <fontDef name="console-red" ref="main" color="#FF0000"/>
  <fontDef name="console-blue" ref="main" color="#AACFFF"/>
  <fontDef name="console-purple" ref="main" color="#FF99FF"/>
  <fontDef name="console-orange" ref="main" color="#FF9900"/>
  <fontDef name="console" ref="main" color="#FFFFFF"/>

