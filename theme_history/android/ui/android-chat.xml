<?xml version="1.0" encoding="UTF-8"?>
<themes>
	
	<theme name="chatframe" ref="mobile-panel" overwrite="true">
		<param name="background"><image>mobile.window.background</image></param>
		<param name="border"><border>0,5,2,5</border></param>
		<theme name="content" ref="-dialog">
			<theme name="scrollpane" ref="scrollpane">
				<param name="background"><image>none</image></param>
				<theme name="vscrollbar" ref="vscrollbar-white"/>
				<param name="border"><border>0</border></param>
				<theme name="textarea" ref="-defaults">
					<param name="fonts"><map>
						<param name="default"><font>chatfont</font></param>
						<param name="color0"><font>chatfont-green</font></param>
						<param name="color1"><font>chatfont</font></param>
						<param name="color2"><font>chatfont</font></param>
						<param name="link"><font>chatfont-blue</font></param>
						<param name="normal"><font>chatfont</font></param>
						<param name="shout"><font>chatfont-orange</font></param>
						<param name="whisper"><font>chatfont-lightgreen</font></param>
						<param name="trade"><font>chatfont-purple</font></param>
						<param name="global"><font>chatfont-teal</font></param>
						<param name="channel"><font>chatfont-yellow</font></param>
						<param name="team"><font>chatfont-brown</font></param>
						<param name="system"><font>chatfont-blue</font></param>
						<param name="battle"><font>chatfont-battle</font></param>
						<param name="link-highlight"><font>chatfont-orange</font></param>
						<param name="normal-highlight"><font>chatfont-orange</font></param>
						<param name="shout-highlight"><font>chatfont-blue</font></param>
						<param name="whisper-highlight"><font>chatfont-orange</font></param>
						<param name="trade-highlight"><font>chatfont-orange</font></param>
						<param name="global-highlight"><font>chatfont-orange</font></param>
						<param name="channel-highlight"><font>chatfont-orange</font></param>
						<param name="team-highlight"><font>chatfont-orange</font></param>
						<param name="system-highlight"><font>chatfont-orange</font></param>
						<param name="battle-highlight"><font>chatfont-orange</font></param>
					</map></param>
					<param name="classes"><map/></param>
					<param name="images"><map>
						<param name="icon-gm"><image>icon-gm</image></param>
						<param name="icon-cm"><image>icon-cm</image></param>
						<param name="icon-hgm"><image>icon-hgm</image></param>
						<param name="icon-dev"><image>icon-dev</image></param>
						<param name="icon-sgm"><image>icon-sgm</image></param>
						<param name="icon-jgm"><image>icon-jgm</image></param>
						<param name="icon-mod"><image>icon-mod</image></param>
						<param name="icon-adm"><image>icon-admin</image></param>
            <param name="icon-sm"><image>icon-sm</image></param>
            <param name="icon-gd"><image>icon-gd</image></param>
						<param name="icon-friend"><image>icon7</image></param>
					</map></param>
				</theme>
			</theme>
		</theme>
	</theme>

    <theme name="top" ref="-dialog">
        <param name="border"><border>0,3,3,0</border></param>
        <param name="background"><image>none</image></param>
        <param name="maxHeight"><int>60</int></param>

        <!-- lock icon -->
        <theme name="spritetogglebutton" ref="button" allowWildcard="true">
            <param name="background"><image>none</image></param>
            <param name="border"><border>0</border></param>
            <param name="maxWidth"><int>60</int></param>
            <param name="maxHeight"><int>60</int></param>
        </theme>
        <theme name="hideButton" ref="button" allowWildcard="true">
            <param name="background"><image>mobile.icons.close</image></param>
            <param name="border"><border>0</border></param>
            <param name="maxWidth"><int>60</int></param>
            <param name="maxHeight"><int>60</int></param>
        </theme>

        <theme name="scrollpane" ref="scrollpane" allowWildcard="true">
            <param name="background"><image>none</image></param>
            <param name="maxHeight"><int>60</int></param>
            <theme name="boxlayout" ref="boxlayout" allowWildcard="true">
                <param name="maxHeight"><int>60</int></param>
            </theme>
        </theme>
    </theme>

    <!-- Used for chat tabs -->
    <theme name="togglebutton-normal" ref="button" allowWildcard="true">
        <param name=""><image>chat-button.*</image></param>
        <param name="border"><border>5</border></param>
        <param name="font"><font>med-noshadow-22-white</font></param>
        <param name="fadeColorInactive"><color>#FFFFFFFF</color></param>
    </theme>
    <theme name="togglebutton-settings" ref="button" allowWildcard="true">
        <param name="background"><image>mobile.icons.gear</image></param>
        <param name="border"><border>5</border></param>
        <param name="font"><font>alphabeta</font></param>
        <param name="fadeColorInactive"><color>#11FFFFFF</color></param>
    </theme>
    <theme name="togglebutton-notification" ref="button" allowWildcard="true">
        <param name="background"><image>mobile.icons.notification</image></param>
        <param name="border"><border>5</border></param>
        <param name="font"><font>alphabeta</font></param>
        <param name="fadeColorInactive"><color>#11FFFFFF</color></param>
    </theme>

    <theme name="bottom" ref="-dialog">
        <param name="background"><image>none</image></param>
        <param name="border"><border>3</border></param>
        <!-- send button -->
        <theme name="button" ref="button" allowWildcard="true">
            <param name="border"><border>4</border></param>
            <param name="minWidth"><int>200</int></param>
            <param name="background"><image>input-black.background</image></param>
            <param name="font"><font>med-noshadow-22-white</font></param>
            <param name="textAlignment"><enum type="alignment">CENTER</enum></param>
        </theme>
        <theme name="button-link" ref="button" allowWildcard="true">
            <param name="minWidth"><int>100</int></param>
        </theme>

        <theme name="editfield" ref="editfield">
            <param name="minHeight"><int>50</int></param>
            <param name="background"><image>input-black.background</image></param>
            <param name="border"><border>4</border></param>
            <param name="columns"><int>1</int></param>
            <theme name="renderer" ref="-input">
                <param name="font"><font>med-noshadow-22-white</font></param>
                <param name="textAlignment"><enum type="alignment">LEFT</enum></param>
            </theme>
        </theme>
        <theme name="chat-type-button" ref="button" allowWildcard="true">
            <param name="border"><border>4</border></param>
        </theme>
    </theme>

    <theme name="chat-playername" ref="button" allowWildcard="true">
		<param name="border"><border>0,0,0,0</border></param>
		<param name="background"><image>none</image></param>
		<param name="font"><font>chatfont</font></param>
		<param name="textAlignment"><enum type="alignment">CENTER</enum></param>
	</theme>
	
	<theme name="chatframe-locked" ref="chatframe" overwrite="true">
		<param name="fadeColorInactive"><color>white</color></param>
		<param name="fadeDurationActivate"><int>0</int></param>
		<param name="fadeDurationDeactivate"><int>0</int></param>
	</theme>
	
	<theme name="chatframe-hidden" ref="-defaults" overwrite="true">
		<param name="background"><image>mobile.icons.chat</image></param>
