	<theme name="word-ping-window" ref="base-frame">
		<param name="background"><image>mobile.window.bottom.background</image></param>
		<param name="fadeDurationShow"><int>200</int></param>
		<param name="fadeDurationHide"><int>1</int></param>
		<param name="titleAreaTop"><int>15</int></param>
		<param name="titleAreaLeft"><int>15</int></param>
		<param name="titleAreaRight"><int>-1</int></param>
		<param name="titleAreaBottom"><int>50</int></param>
		<param name="closeButtonX"><int>-64</int></param>
		<param name="closeButtonY"><int>0</int></param>
		<theme name="title" ref="label" allowWildcard="true">
			<param name="font"><font>xlarge</font></param>
		</theme>
		<theme name="closeButton" ref="-defaults">
			<param name="background"><image>mobile.icons.close</image></param>
			<param name="minWidth"><int>60</int></param>
			<param name="minHeight"><int>60</int></param>
		</theme>
		<theme name="dialoglayout" ref="-defaults" allowWildcard="true">
			<param name="background"><image>none</image></param>
			<param name="border"><border>65,8,0,8</border></param>
			<param name="defaultGap"><dimension>5,2</dimension></param>
			<param name="smallGap"><dimension>8,8</dimension></param>
			<param name="mediumGap"><dimension>10,10</dimension></param>
			<param name="largeGap"><dimension>15,15</dimension></param>
			<param name="namedGaps"><map/></param>
			<param name="maxWidth"><int>150</int></param>
			<param name="maxHeight"><int>150</int></param>
			<theme name="label-settings-title" ref="label-settings-title">
				<param name="background"><image>none</image></param>
				<param name="font"><font>med-shadow-22-white</font></param>
				<param name="minWidth"><int>350</int></param>
			</theme>
			<theme name="label" ref="label">
				<param name="font"><font>med-shadow-22-white</font></param>
			</theme>
			<theme name="button" ref="mobile-bottom-button"/>
			<theme name="scrollpane">
				<param name="background"><image>ui-inputbox.background</image></param>
				<param name="overlay"><image>none</image></param>
				<theme name="hscrollbar" ref="hscrollbar"/>  <!-- not used -->
				<theme name="vscrollbar" ref="vscrollbar-white"/>
				<param name="border"><border>0,0,0,0</border></param>
				
				<param name="minWidth"><int>150</int></param>
				<param name="maxWidth"><int>32767</int></param>
				<param name="maxHeight"><int>32767</int></param>
				<param name="hasDragButton"><bool>false</bool></param>
				<param name="autoScrollArea"><int>5</int></param>
				<param name="autoScrollSpeed"><int>10</int></param>
				<param name="minHeight"><int>170</int></param>
				<theme name="editfield" ref="-defaults" allowWildcard="true">
					<param name="font"><font>pb-dark</font></param>
					<param name=""><image>editfield.*</image></param>
					<param name="background"><image>none</image></param>
					<param name="border"><border>10</border></param>
					<param name="passwordChar"><int>35</int></param>
					<param name="maxWidth"><int>32767</int></param>
					<param name="columns"><int>25</int></param>
					<param name="mouseCursor"><cursor>cursor.text</cursor></param>
					<theme name="renderer" ref="-input">
						<param name="textAlignment"><enum type="alignment">topleft</enum></param>
						<param name="font"><font>med-noshadow-22-white</font></param>
					</theme>
					<param name="autocompletion-height"><int>250</int></param>
					<param name="minWidth"><int>478</int></param>
				</theme>
			</theme>
