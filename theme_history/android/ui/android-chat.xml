			<param name="border"><border>10,20</border></param>
			<param name="background"><image>mobile.editfield.background</image></param>
			<param name="minHeight"><int>60</int></param>
		</theme>
		<theme name="togglebutton" ref="togglebutton">
			<param name="border"><border>12</border></param>
			<param name="background"><image>ui-checkbox.background</image></param>
			<param name="minHeight"><int>50</int></param>
